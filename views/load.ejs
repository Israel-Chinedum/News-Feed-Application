<style>

    *{
        margin: 0;
        padding: 0;
        border: 0;
    }

    .load-container{
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.637);
        display: flex;
        justify-content: center;
        align-items: center;
        position: absolute;
        z-index: 2;
        display: none;
    }

    .load{
        width: 70px;
        height: 70px;
        border-radius: 50%;
        border-top: 10px dotted orangered;
        border-left: 10px dotted orangered;
        animation: rotate 1s infinite;
    }

    @keyframes rotate{
        from{
            transform: rotate(0deg);
        }
        to{
            transform: rotate(360deg);
        }
    }

</style>

<body>
    <div class="load-container">
        <div class="load"></div>
    </div>
</body>